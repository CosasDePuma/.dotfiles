# Global
# ----------
if test -d /etc/X11/xinit/xinitrc.d; then
	for f in /etc/X11/xinit/xinitrc.d/*; do
		test -x "${f}" && . "${f}"
	done
	unset f
fi

# Wallpaper
# ----------
command -v feh >/dev/null && test -x ~/.fehbg && ~/.fehbg &

# Window manager
# ----------
exec i3
